<div class="posts-show">
  <div class="container">
    <div class="posts-show-item">
      <figure class="posts-show-image">
        <img src="/assets/gray.jpg" alt="">
      </figure>
      <div class="posts-show-body">
        <div class="posts-show-icon">
          <i class="fa-regular fa-heart"></i>
          <i class="fa-regular fa-comment"></i>
        </div>
        <p class="posts-show-account">ota_1996_625</p>
        <p class="posts-show-text"><%= @post.content %></p>
        <div class="posts-show-time"><%= @post.created_at %></div>
        <div class="post-menus">
          <%= link_to("編集", "/posts/#{@post.id}/edit") %>
          <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
        </div>
        </div>  
    </div>
  </div>
</div>